.search_box{
	width:100%;
	height:40px;
	position:relative;
	background-color:rgba(238,235,231);
}
.search_box input{
	width: 70%;
	height: 70%;
	-webkit-transition: 1s;
	transition: 1s;
	border-style: solid;
	border-width: 2px;
	border-color: rgba(245,186,24,0.7);
	position: absolute;
	top: 12%;
	border-radius: 18px;
	left: 15%;
	background-color: rgba(245,186,24,0.3);
}


